@model CategoryViewModel

@{
    ViewBag.Title = "Computer Web Shop | Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section headerSection {
    @Html.Partial("_LayoutHeader")
}

<form asp-controller="Category" asp-action="Index" method="post">
    <div class="col-lg-12" @*style="margin-top:10px!important"*@>
        <div class="d-flex justify-content-between">
            <div class="input-group panel-body no-padding">
                <input asp-for="@Model.Search" class=" form-control " type="text" placeholder="What are you looking for?">
                <span class="input-group-btn">
                    <input type="submit" class="btn btn-primary2 btn-lg p-sm" value="Sök" />
                </span>
            </div>
        </div>
    </div>
</form>

<div>
    <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-caption">
            <div class="container">
                <div class="col-lg-12">
                    <div class="col-sm-7 hpanel m-t-md  homesearch">
                    </div>
                </div>
            </div>
        </div>
        <!-- Carousel items -->
        <div class="carousel-inner">
            <div class="active item"><img src="@Url.Content("~/images/top1.png")" /></div>
            <div class="item"><img src="@Url.Content("~/images/top2.jpg")" /></div>
            <div class="item"><img src="@Url.Content("~/images/top1.png")" /></div>
        </div>
    </div>

    <section>
        <div class="container sectionspc">
            <div class="hpanel forum-box">
                <div class="row product-container">
                    @foreach (Category category in Model.Categories)
                    {
                        <partial name="_PartialBrands.cshtml" model="category" />
                    }
                </div>
            </div>
        </div>
    </section>

</div>